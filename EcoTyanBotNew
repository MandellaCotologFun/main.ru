import telebot
from ECO_TOKEN import TG_TOKEN

bot = telebot.TeleBot(TG_TOKEN)

# –ë–∞–∑–∞ "–ø—Ä–µ–¥–º–µ—Ç -> –∫–∞—Ç–µ–≥–æ—Ä–∏—è"
recycling_dict = {
    '–±—É—Ç—ã–ª–∫–∞': '–ü–ª–∞—Å—Ç–∏–∫',
    '–ø–∞–∫–µ—Ç': '–ü–ª–∞—Å—Ç–∏–∫',
    '—Å—Ç–µ–∫–ª–æ': '–°—Ç–µ–∫–ª–æ',
    '–≥–∞–∑–µ—Ç–∞': '–ë—É–º–∞–≥–∞',
    '–∫–∞—Ä—Ç–æ–Ω': '–ë—É–º–∞–≥–∞',
    '—è–±–ª–æ–∫–æ': '–û—Ä–≥–∞–Ω–∏–∫–∞',
    '–±–∞–Ω–∞–Ω–æ–≤–∞—è –∫–æ–∂—É—Ä–∞': '–û—Ä–≥–∞–Ω–∏–∫–∞',
    '–±–∞—Ç–∞—Ä–µ–π–∫–∞': '–û–ø–∞—Å–Ω—ã–µ –æ—Ç—Ö–æ–¥—ã',
    '–ª–∞–º–ø–æ—á–∫–∞': '–û–ø–∞—Å–Ω—ã–µ –æ—Ç—Ö–æ–¥—ã',
    '–æ–¥–µ–∂–¥–∞': '–¢–µ–∫—Å—Ç–∏–ª—å',
    '–º–µ—Ç–∞–ª–ª': '–ú–µ—Ç–∞–ª–ª',
}

# /start
@bot.message_handler(commands=['start'])
def start(message):
    bot.send_message(message.chat.id,
        "‚âΩ^‚Ä¢ Àï ‚Ä¢ ‡æÄ‡Ω≤‚âº –ü—Ä–∏–≤–µ—Ç! –Ø –ø–æ–º–æ–≥—É —Ç–µ–±–µ –ø—Ä–∞–≤–∏–ª—å–Ω–æ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –º—É—Å–æ—Ä‚ô°.\n–ù–∞–ø–∏—à–∏ /help, —á—Ç–æ–±—ã —É–∑–Ω–∞—Ç—å, —á—Ç–æ —è —É–º–µ—é.ùúó‡ßé"
    )

# /help
@bot.message_handler(commands=['help'])
def help_message(message):
    bot.send_message(message.chat.id,
        "üõ† –í–æ—Ç —á—Ç–æ —è —É–º–µ—é:\n"
        "/start - –ü—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏–µ‚ô°\n"
        "/help - –ü–æ–º–æ—â—å –∏ —Å–ø–∏—Å–æ–∫ –∫–æ–º–∞–Ω–¥‚ô°\n"
        "/sort - –£–∑–Ω–∞—Ç—å, –∫—É–¥–∞ –≤—ã–±—Ä–æ—Å–∏—Ç—å –ø—Ä–µ–¥–º–µ—Ç‚ô°\n"
        "/categories - –°–ø–∏—Å–æ–∫ –∫–∞—Ç–µ–≥–æ—Ä–∏–π –æ—Ç—Ö–æ–¥–æ–≤‚ô°\n"
        "/about - –ó–∞—á–µ–º —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –º—É—Å–æ—Ä?"
    )

# /sort
@bot.message_handler(commands=['sort'])
def sort_command(message):
    bot.send_message(message.chat.id,
        "‚ôªÔ∏è –ù–∞–ø–∏—à–∏ –Ω–∞–∑–≤–∞–Ω–∏–µ –ø—Ä–µ–¥–º–µ—Ç–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä: –±—É—Ç—ã–ª–∫–∞, –≥–∞–∑–µ—Ç–∞, —è–±–ª–æ–∫–æ), –∏ —è —Å–∫–∞–∂—É, –∫—É–¥–∞ –µ–≥–æ –≤—ã–±—Ä–æ—Å–∏—Ç—å.‚ô°"
    )

# /categories
@bot.message_handler(commands=['categories'])
def categories(message):
    bot.send_message(message.chat.id,
        "üì¶ –û—Å–Ω–æ–≤–Ω—ã–µ –∫–∞—Ç–µ–≥–æ—Ä–∏–∏ –º—É—Å–æ—Ä–∞:\n"
        "‚Ä¢ –ü–ª–∞—Å—Ç–∏–∫\n‚Ä¢ –ë—É–º–∞–≥–∞\n‚Ä¢ –°—Ç–µ–∫–ª–æ\n‚Ä¢ –ú–µ—Ç–∞–ª–ª\n‚Ä¢ –û—Ä–≥–∞–Ω–∏–∫–∞\n‚Ä¢ –û–ø–∞—Å–Ω—ã–µ –æ—Ç—Ö–æ–¥—ã\n‚Ä¢ –¢–µ–∫—Å—Ç–∏–ª—å‚ô°"
    )

# /about
@bot.message_handler(commands=['about'])
def about(message):
    bot.send_message(message.chat.id,
        "üåç –ó–∞—á–µ–º —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å –º—É—Å–æ—Ä?\n"
        "–ü—Ä–∞–≤–∏–ª—å–Ω–∞—è —Å–æ—Ä—Ç–∏—Ä–æ–≤–∫–∞ –ø–æ–º–æ–≥–∞–µ—Ç –ø–µ—Ä–µ—Ä–∞–±–æ—Ç–∫–µ, —É–º–µ–Ω—å—à–∞–µ—Ç –∑–∞–≥—Ä—è–∑–Ω–µ–Ω–∏–µ –∏ —Å–ø–∞—Å–∞–µ—Ç –ø—Ä–∏—Ä–æ–¥—É. –í–º–µ—Å—Ç–µ –º—ã –º–æ–∂–µ–º —Å–¥–µ–ª–∞—Ç—å –º–∏—Ä —á–∏—â–µ.·êü"
    )

# –û–±—Ä–∞–±–æ—Ç–∫–∞ —Ç–µ–∫—Å—Ç–∞
@bot.message_handler(content_types=['text'])
def sort_trash(message):
    item = message.text.strip().lower()
    category = recycling_dict.get(item)
    
    if category:
        bot.send_message(message.chat.id, f"üîé {item.capitalize()} –Ω—É–∂–Ω–æ –≤—ã–±—Ä–æ—Å–∏—Ç—å –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è: *{category}*", parse_mode='Markdown')
    else:
        bot.send_message(message.chat.id, "‚ùì –ù–µ –∑–Ω–∞—é, –∫–∞–∫ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å —ç—Ç–æ—Ç –ø—Ä–µ–¥–º–µ—Ç. –ü–æ–ø—Ä–æ–±—É–π –¥—Ä—É–≥–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –∏–ª–∏ –Ω–∞–ø–∏—à–∏ –ø–æ–¥—Ä–æ–±–Ω–µ–µ.‚ô°")

bot.infinity_polling()
