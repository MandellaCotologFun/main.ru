import telebot
from ECO_TOKEN import TG_TOKEN

bot = telebot.TeleBot(TG_TOKEN)

# –ü—Ä–æ—Å—Ç–µ–π—à–∞—è –±–∞–∑–∞ "–º—É—Å–æ—Ä -> –∫–∞—Ç–µ–≥–æ—Ä–∏—è"
recycling_dict = {
    '–±—É—Ç—ã–ª–∫–∞': '–ü–ª–∞—Å—Ç–∏–∫',
    '–ø–∞–∫–µ—Ç': '–ü–ª–∞—Å—Ç–∏–∫',
    '—Å—Ç–µ–∫–ª–æ': '–°—Ç–µ–∫–ª–æ',
    '–≥–∞–∑–µ—Ç–∞': '–ë—É–º–∞–≥–∞',
    '–∫–∞—Ä—Ç–æ–Ω': '–ë—É–º–∞–≥–∞',
    '—è–±–ª–æ–∫–æ': '–û—Ä–≥–∞–Ω–∏–∫–∞',
    '–±–∞–Ω–∞–Ω–æ–≤–∞—è –∫–æ–∂—É—Ä–∞': '–û—Ä–≥–∞–Ω–∏–∫–∞',
    '–±–∞—Ç–∞—Ä–µ–π–∫–∞': '–û–ø–∞—Å–Ω—ã–µ –æ—Ç—Ö–æ–¥—ã',
    '–ª–∞–º–ø–æ—á–∫–∞': '–û–ø–∞—Å–Ω—ã–µ –æ—Ç—Ö–æ–¥—ã',
    '–æ–¥–µ–∂–¥–∞': '–¢–µ–∫—Å—Ç–∏–ª—å',
    '–º–µ—Ç–∞–ª–ª': '–ú–µ—Ç–∞–ª–ª',
}

@bot.message_handler(commands=['start'])
def start(message):
    bot.send_message(message.chat.id,
        "–ü—Ä–∏–≤–µ—Ç! –ù–∞–ø–∏—à–∏, –∫–∞–∫–æ–π –ø—Ä–µ–¥–º–µ—Ç —Ç—ã —Ö–æ—á–µ—à—å –≤—ã–±—Ä–æ—Å–∏—Ç—å, –∞ —è –ø–æ–¥—Å–∫–∞–∂—É, –≤ –∫–∞–∫–æ–π –±–∞–∫ –µ–≥–æ –ø–æ–ª–æ–∂–∏—Ç—å üóëÔ∏è"
    )

@bot.message_handler(content_types=['text'])
def sort_trash(message):
    item = message.text.strip().lower()
    category = recycling_dict.get(item)
    
    if category:
        bot.send_message(message.chat.id, f" {item.capitalize()} –Ω—É–∂–Ω–æ –≤—ã–±—Ä–æ—Å–∏—Ç—å –≤ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä –¥–ª—è: *{category}*", parse_mode='Markdown')
    else:
        bot.send_message(message.chat.id,  "–ù–µ –∑–Ω–∞—é, –∫–∞–∫ —Å–æ—Ä—Ç–∏—Ä–æ–≤–∞—Ç—å —ç—Ç–æ—Ç –ø—Ä–µ–¥–º–µ—Ç. –ü–æ–ø—Ä–æ–±—É–π –¥—Ä—É–≥–æ–µ –Ω–∞–∑–≤–∞–Ω–∏–µ –∏–ª–∏ –Ω–∞–ø–∏—à–∏ –ø–æ–¥—Ä–æ–±–Ω–µ–µ.")

bot.infinity_polling()
