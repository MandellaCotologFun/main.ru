import telebot
import random
from father import TG_TOKEN


bot = telebot.TeleBot(TG_TOKEN)

@bot.message_handler(commands=['/start', '/help'])
def start(message):
    bot.send_message(message.chat.id,
        "–ü—Ä–∏–≤–µ—Ç! –í–æ—Ç —á—Ç–æ —è —É–º–µ—é:\n",
        "/joke-—à—É—Ç–∫–∞\n",
        "/predict-–≥–∞–¥–∞–Ω–∏–µ\n"                                  
    )

@bot.message_handler(commands=['/joke'])
def joke(message):
    jokes = [
        "–ù–∞ –Ω–µ–±–µ –∞—Ç–µ–∏—Å—Ç—ã –ø—Ä–æ—Å–∏–ª–∏ –ø–æ–∑–≤–∞—Ç—å –±–æ–≥–∞. –ë–æ–≥ –æ—Ç–≤–µ—Ç–∏–ª-–º–µ–Ω—è –Ω–µ—Ç",
        "–ß—Ç–æ –æ–±—â–µ–≥–æ —É –ø—Ä–æ–≥—Ä–∞–º–º–∏—Å—Ç–∞, —Ö—É–¥–æ–∂–Ω–∏–∫–∞ –∏ –≥–∏—Ç–∞—Ä–∏—Å—Ç–∞? –í –∫–æ–Ω–µ—á–Ω–æ–º –∏—Ç–æ–≥–µ, –æ–Ω–∏ –≤—Å–µ —Å—Ç–∞–Ω—É—Ç –∫—Ä–µ–≤–µ—Ç–∫–∞–º–∏. ",
        "–ì–æ–≤–æ—Ä—è—Ç, —á—Ç–æ –±–æ—Ç—ã –Ω–µ —Å–º–µ—é—Ç—Å—è. –•–ê–•–ê–•–ê",
        "–ü–∞—Ü–∏–µ–Ω—Ç —Å–ø—Ä–∞—à–∏–≤–∞–µ—Ç —É –¥–æ–∫—Ç–æ—Ä–∞:–î–æ–∫—Ç–æ—Ä, —Å–∫–æ–ª—å–∫–æ –º–Ω–µ –æ—Å—Ç–∞–ª–æ—Å—å? –î–æ–∫—Ç–æ—Ä:5... –ü–∞—Ü–∏–µ–Ω—Ç:5 —á–µ–≥–æ..? –î–æ–∫—Ç–æ—Ä:4..."
    ]
    bot.send_message(message.chat.id, random.choice(jokes))

@bot.message_handler(commands=['/predict'])
def joke(message):
    answers = [
        "–î–∞!",
        "–ù–µ—Ç",
        "–í–æ–∑–º–æ–∂–Ω–æ...",
        "–¢–µ–±–µ –ª—É—á—à–µ –Ω–µ –∑–Ω–∞—Ç—å"
    ]
    bot.send_message(message.chat.id,f"üîÆ{random.choice(answers)}")

# --- –û—Ç–≤–µ—Ç –Ω–∞ —Å—Ç–∏–∫–µ—Ä ---
@bot.message_handler(content_types=['sticker'])
def handle_sticker(message):
    bot.reply_to(message, '–í–∞—É, –∫–∞–∫–æ–π –∫—Ä—É—Ç–æ–π —Å—Ç–∏–∫–µ—Ä!')

# --- "–ë–ª–∏–Ω" –≤ —Å–æ–æ–±—â–µ–Ω–∏–∏ ---
@bot.message_handler(func=lambda message: message.text and '–±–ª–∏–Ω' in message.text.lower())
def handle_blin(message):
    bot.reply_to(message, f'–°–ª—É—à–∞–π, {message.from_user.first_name}, —è —Ç–æ–∂–µ –ª—é–±–ª—é –±–ª–∏–Ω—ã! ü•û')

bot.infinity_polling()
